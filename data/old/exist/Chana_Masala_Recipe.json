    "instructions": [
        {
            "step": "1",
            "title": "Cook the Chickpeas",
            "description": "Soak chickpeas overnight. Drain and cook in a pressure cooker or pot until soft."
        },
        {
            "step": "2",
            "title": "Prepare the Masala",
            "description": "Heat oil in a pan. Add cumin seeds and let them splutter. Add onions and cook until golden. Stir in ginger-garlic paste and green chilies."
        },
        {
            "step": "3",
            "title": "Add Spices and Tomatoes",
            "description": "Add coriander powder, turmeric, red chili powder, and garam masala. Cook for a minute. Add tomato puree and cook until oil separates."
        },
        {
            "step": "4",
            "title": "Combine with Chickpeas",
            "description": "Add cooked chickpeas to the masala with enough water to make a gravy. Simmer for 10-15 minutes. Add amchur and salt."
        },
        {
            "step": "5",
            "title": "Garnish and Serve",
            "description": "Garnish with chopped coriander leaves. Serve hot with rice or bread."
        }
