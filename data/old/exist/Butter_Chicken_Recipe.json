    "instructions": [
        {
            "step": "1",
            "title": "Marinate the Chicken",
            "description": "Mix chicken with yogurt, ginger-garlic paste, lemon juice, red chili powder, turmeric, and salt. Marinate for at least 2 hours."
        },
        {
            "step": "2",
            "title": "Grill the Chicken",
            "description": "Grill the marinated chicken until cooked through. Alternatively, cook in a skillet with some oil."
        },
        {
            "step": "3",
            "title": "Prepare the Sauce",
            "description": "In a saucepan, heat butter and oil. Add cardamom, cinnamon, and cloves. Add tomato puree and cook until it thickens. Add cream, honey, garam masala, and grilled chicken. Simmer for 10 minutes."
        },
        {
            "step": "4",
            "title": "Finish with Fenugreek",
            "description": "Stir in crushed fenugreek leaves. Adjust seasoning as needed."
        },
        {
            "step": "5",
            "title": "Serve",
            "description": "Serve the butter chicken with naan or rice."
        }
