    "instructions": [
        {
            "step": "1",
            "title": "Prepare the Spice Mix",
            "description": "Dry roast coriander seeds, cumin seeds, and dry red chilies. Grind them into a coarse powder."
        },
        {
            "step": "2",
            "title": "Cook the Chicken",
            "description": "Heat oil in a kadai. Add onions and ginger-garlic paste, saut\u00c3\u00a9 until golden. Add chicken pieces, turmeric, red chili powder, and salt. Cook until chicken is half done."
        },
        {
            "step": "3",
            "title": "Add Vegetables and Spices",
            "description": "Add bell pepper, tomatoes, and the ground spice mix to the chicken. Cook until the chicken is tender and the tomatoes are mushy."
        },
        {
            "step": "4",
            "title": "Finish with Garam Masala",
            "description": "Sprinkle garam masala over the curry and mix well."
        },
        {
            "step": "5",
            "title": "Garnish and Serve",
            "description": "Garnish with chopped coriander leaves. Serve hot with naan, roti, or rice."
        }
