    "instructions": [
        {
            "step": "1",
            "title": "Marinate the Beef",
            "description": "Mix beef cubes with ginger-garlic paste, turmeric powder, red chili powder, coriander powder, cumin powder, and vinegar. Marinate for at least 2 hours or overnight."
        },
        {
            "step": "2",
            "title": "Cook the Beef",
            "description": "Heat oil in a pan. Add onions and saut\u00c3\u00a9 until golden. Add marinated beef and cook until browned."
        },
        {
            "step": "3",
            "title": "Simmer with Spices and Coconut Milk",
            "description": "Add tomatoes, tamarind paste, garam masala, and salt. Pour in coconut milk and enough water to cover the beef. Bring to a boil, then simmer until the beef is tender."
        },
        {
            "step": "4",
            "title": "Garnish and Serve",
            "description": "Garnish with chopped cilantro. Serve hot with rice or Goan bread."
        }
