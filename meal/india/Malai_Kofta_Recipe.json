    "instructions": [
        {
            "step": "1",
            "title": "Prepare the Kofta Mixture",
            "description": "Mix grated paneer, mashed potatoes, green peas, chopped cashews, raisins, cornflour, garam masala, and salt. Form into small balls."
        },
        {
            "step": "2",
            "title": "Deep Fry the Koftas",
            "description": "Heat oil in a frying pan. Deep fry the koftas until golden brown. Drain on paper towels."
        },
        {
            "step": "3",
            "title": "Make the Gravy",
            "description": "Heat oil in a saucepan. Add cumin seeds, onions, and ginger-garlic paste. Saut\u00c3\u00a9 until onions are golden. Add tomato puree, turmeric, and coriander powder. Cook until oil separates."
        },
        {
            "step": "4",
            "title": "Simmer the Gravy",
            "description": "Add water to the gravy and bring to a boil. Simmer until it thickens. Add cream and simmer for a few more minutes."
        },
        {
            "step": "5",
            "title": "Add Koftas to Gravy",
            "description": "Add the fried koftas to the gravy just before serving. Heat through for a few minutes."
        },
        {
            "step": "6",
            "title": "Garnish and Serve",
            "description": "Garnish with chopped coriander leaves. Serve hot with naan or rice."
        }
    ],
