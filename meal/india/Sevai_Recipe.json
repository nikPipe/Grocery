    "instructions": [
        {
            "step": "1",
            "title": "Prepare Sevai",
            "description": "Boil the sevai in water until soft, then drain and set aside."
        },
        {
            "step": "2",
            "title": "Cook the Vegetables",
            "description": "Heat oil in a pan. Add mustard seeds, urad dal, curry leaves, green chilies, and onions. Saut\u00c3\u00a9 until onions are translucent. Add carrots, green peas, and green beans. Cook until vegetables are tender."
        },
        {
            "step": "3",
            "title": "Combine Sevai with Vegetables",
            "description": "Add the boiled sevai to the pan with the cooked vegetables. Add salt and mix well. Cook for a few minutes."
        },
        {
            "step": "4",
            "title": "Finish with Lemon Juice",
            "description": "Turn off the heat, add lemon juice, and mix well."
        },
        {
            "step": "5",
            "title": "Serve",
