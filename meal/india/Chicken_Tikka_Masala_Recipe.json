    "instructions": [
        {
            "step": "1",
            "title": "Marinate the Chicken",
            "description": "Combine chicken with yogurt, ginger-garlic paste, lemon juice, tandoori masala, and salt. Marinate for at least 2 hours or overnight."
        },
        {
            "step": "2",
            "title": "Grill the Chicken",
            "description": "Grill the marinated chicken until cooked through. Alternatively, pan-fry in a skillet."
        },
        {
            "step": "3",
            "title": "Prepare the Sauce",
            "description": "Heat oil and butter in a saucepan. Add cumin seeds, onions, and cook until golden. Add tomato puree, turmeric, coriander, red chili powder, and salt. Cook until the oil begins to separate."
        },
        {
            "step": "4",
            "title": "Combine Chicken and Sauce",
            "description": "Add the grilled chicken to the sauce. Add water to adjust the consistency and simmer for 10 minutes."
        },
        {
            "step": "5",
            "title": "Finish with Cream and Garam Masala",
            "description": "Stir in cream and garam masala. Simmer for another 5 minutes."
        },
        {
            "step": "6",
            "title": "Serve",
            "description": "Garnish with chopped coriander leaves. Serve hot with rice or naan."
        }
