    "instructions": [
        {
            "step": "1",
            "title": "Marinate the Chicken",
            "description": "Marinate the chicken with yogurt, fried onions, ginger-garlic paste, green chilies, mint, coriander leaves, lemon juice, biryani masala, turmeric, red chili powder, and salt. Let it marinate for at least 2 hours."
        },
        {
            "step": "2",
            "title": "Prepare Rice",
            "description": "Wash and soak basmati rice for 30 minutes. Boil water with cardamom, cloves, cinnamon, and bay leaves. Add rice and cook until it's 70% done. Drain the rice."
        },
        {
            "step": "3",
            "title": "Layer the Biryani",
            "description": "In a large pot, layer the marinated chicken and partially cooked rice. Sprinkle saffron milk, fried onions, mint, coriander leaves, and drizzle ghee over the top."
        },
        {
            "step": "4",
            "title": "Cook on Dum",
            "description": "Seal the pot with a tight lid or dough. Cook on a low flame for about 40-45 minutes."
        },
        {
            "step": "5",
            "title": "Serve",
            "description": "Gently fluff and mix the biryani. Serve hot with raita or salad."
        }
    ],
