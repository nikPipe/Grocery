    "instructions": [
        {
            "step": "1",
            "title": "Prepare the Gatte",
            "description": "Mix gram flour, spices, salt, and a little oil. Add yogurt and knead into a firm dough. Make a well in the center of each dough portion, stuff with mixed nuts and raisins, and roll into cylindrical shapes."
        },
        {
            "step": "2",
            "title": "Cook the Gatte",
            "description": "Boil water in a pan and cook the stuffed gatte until they float to the top. Remove, cool, and cut into pieces."
        },
        {
            "step": "3",
            "title": "Make the Gravy",
            "description": "Heat oil in a pan. Add cumin seeds, asafoetida, and remaining spices. Add water and salt, bring to a boil, then simmer to form a gravy."
        },
        {
            "step": "4",
            "title": "Combine and Serve",
            "description": "Add the gatte pieces to the gravy and cook for a few minutes. Garnish with cilantro and serve with rice or roti."
        }
