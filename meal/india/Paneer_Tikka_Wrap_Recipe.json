    "instructions": [
        {
            "step": "1",
            "title": "Marinate the Paneer",
            "description": "Mix yogurt, tandoori masala, red chili powder, turmeric, lemon juice, and salt. Add paneer cubes and marinate for at least 15 minutes."
        },
        {
            "step": "2",
            "title": "Grill the Paneer",
            "description": "Heat oil in a grill pan. Grill the marinated paneer until charred on all sides."
        },
        {
            "step": "3",
            "title": "Prepare the Wrap",
            "description": "Warm the flatbread or tortilla. Spread mint chutney and mayonnaise/yogurt-based sauce over it."
        },
        {
            "step": "4",
            "title": "Assemble the Wrap",
            "description": "Place grilled paneer, sliced onions, and bell peppers on the flatbread. Roll it tightly to make a wrap."
        },
        {
            "step": "5",
            "title": "Serve",
            "description": "Cut the wrap in half and serve immediately."
