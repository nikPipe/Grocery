    "instructions": [
        {
            "step": "1",
            "title": "Roast and Grind Spices",
            "description": "Dry roast coriander seeds, cumin seeds, fennel seeds, black peppercorns, dried red chilies, cinnamon, cloves, cardamom, and grated coconut until aromatic. Cool and grind to a fine paste."
        },
        {
            "step": "2",
            "title": "Cook the Chicken",
            "description": "Heat oil in a pan. Add onions, ginger-garlic paste, and curry leaves. Saut\u00c3\u00a9 until onions are golden. Add turmeric powder and the ground spice paste. Cook for a few minutes."
        },
        {
            "step": "3",
            "title": "Add Chicken and Tomatoes",
            "description": "Add chicken pieces, salt, and mix well. Cook until chicken is half done. Add chopped tomatoes and tamarind paste."
        },
        {
            "step": "4",
            "title": "Simmer the Curry",
            "description": "Add water to cover the chicken. Bring to a boil, then simmer until the chicken is cooked and the sauce thickens."
        },
        {
            "step": "5",
            "title": "Garnish and Serve",
            "description": "Garnish with chopped coriander leaves. Serve hot with rice or Indian bread."
        }
    ],
