    "instructions": [
        {
            "step": "1",
            "title": "Roast and Grind Spices",
            "description": "Dry roast coriander seeds, cumin seeds, poppy seeds, fennel seeds, cloves, cinnamon, black peppercorns, dried red chilies, and grated coconut until aromatic. Cool and grind to a fine paste."
        },
        {
            "step": "2",
            "title": "Cook the Chicken",
            "description": "Heat oil in a pan. Add onions and cook until they turn golden brown. Add ginger-garlic paste, turmeric powder, and the ground spice paste. Cook for a few minutes."
        },
        {
            "step": "3",
            "title": "Add Chicken and Tomatoes",
            "description": "Add chicken pieces, salt, and chopped tomatoes. Cook until chicken is browned."
        },
        {
            "step": "4",
            "title": "Simmer with Tamarind",
            "description": "Add tamarind paste and water. Cover and simmer until the chicken is cooked and the gravy is thick."
        },
        {
            "step": "5",
            "title": "Garnish and Serve",
            "description": "Garnish with chopped cilantro. Serve hot with rice or Indian bread like roti or naan."
        }
