    "instructions": [
        {
            "step": "1",
            "title": "Prepare the Batter",
            "description": "In a mixing bowl, combine gram flour, yogurt, water, turmeric, sugar, ginger-green chili paste, and lemon juice to form a smooth batter. Let it rest for a few minutes."
        },
        {
            "step": "2",
            "title": "Steam the Khaman",
            "description": "Just before steaming, add fruit salt or baking soda to the batter and mix gently. Pour the batter into a greased steaming tray and steam for 10-12 minutes."
        },
        {
            "step": "3",
            "title": "Prepare the Tempering",
            "description": "Heat oil in a pan. Add mustard seeds, sesame seeds, and curry leaves. Once they splutter, pour the tempering over the steamed Khaman."
        },
        {
            "step": "4",
            "title": "Garnish and Serve",
            "description": "Garnish with chopped coriander leaves and grated coconut. Serve warm with green chutney."
        }
